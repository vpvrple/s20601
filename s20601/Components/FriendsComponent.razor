@if (isFriend)
{
    <MudIconButton Icon="@Icons.Material.Filled.Message"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Size="Size.Small" />
    <MudIconButton Icon="@Icons.Material.Filled.PersonRemoveAlt1"
                   Variant="Variant.Filled"
                   Color="Color.Error"
                   OnClick="OnButtonClicked"
                   Size="Size.Small" />

}
else
{
    <MudIconButton Icon="@Icons.Material.Filled.PersonAddAlt1"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Size="Size.Small" />
}

@code
{
    private bool isFriend = true;
    [Inject] private IDialogService DialogService { get; set; }

    private async void OnButtonClicked()
    {
        bool? result = await DialogService.ShowMessageBox(
        "Warning",
        "Are you sure you want to remove this person from your friend list?",
        yesText: "Unfriend", cancelText: "Cancel");
        StateHasChanged();
    }
}