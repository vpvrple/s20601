                            <MudText Typo="Typo.subtitle1" Color="Color.Dark">No genres defined yet</MudText>
                        </MudItem>
                    }
                    else
                    {
                        foreach (var genre in movieGenres)
                        {
                            <MudChipSet T="Color">
                                <MudChip>@genre.Name</MudChip>
                            </MudChipSet>
                        }
                    }

                </MudItem>
                <MudFlexBreak />
                <MudItem>
                    <MudText Typo="Typo.h6">Top reviews</MudText>
                </MudItem>
                <MudFlexBreak />
                <MudItem Style="width: 100%;">
