                </MudItem>
                <MudItem>
                    <MudText Typo="Typo.h6">Community sentiment</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Success">Positive</MudText>
                </MudItem>
                <MudFlexBreak />
