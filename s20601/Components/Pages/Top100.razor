@page "/top100"

<MudText Style="margin-top: 25px;" Typo="Typo.h4">Top 100 movies of all time</MudText>
<MudGrid>
    <MudItem>
        <MudCard>
            <MudImage Src="favicon.png"
                      ObjectFit="ObjectFit.None"
                      Alt="Movie poster"
                      Elevation="0"
                      Height="300"
                      Width="280" />
            <MudCardContent>
                <MudStack>
                    <MudStack Row="true" Class="justify-center">
                        <MudRating SelectedValue="2" Size="Size.Small" />
                        <MudText Typo="Typo.subtitle2">4.3</MudText>
                        <MudText Typo="Typo.subtitle2">(999)</MudText>
                    </MudStack>
                    <MudDivider />
                    <MudText Typo="Typo.h6">
                        1. Random movie
                        <MudText Typo="Typo.subtitle2">(2025) 2h 50m</MudText>
                    </MudText>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
