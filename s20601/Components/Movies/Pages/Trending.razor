@page "/trending"

@using s20601.Components.Common.Components
@using Services
@using s20601.Components.Movies.Components
@using s20601.Data.Models.DTOs
@inject IRatingService RatingSvc

<MudText Class="mt-6" Typo="Typo.h4">Trending movies</MudText>
<MudGrid>
    @if (trendingMovies is null)
    {
        <MudProgressCircular Color="Color.Default" Indeterminate="true" />
    }
    else
    {
        @foreach (var movie in trendingMovies)
        {
            <MudItem>
                <MudCard>
                    <MovieCoverComponent MovieId="movie.Id" />
                    <MudCardContent>
                        <MudStack>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                <MudLink Href="@movie.GetUrl()">@movie.Title</MudLink>
                                <MudText Typo="Typo.subtitle2">(@movie.StartYear) @(movie.Runtime / 60) hours @(movie.Runtime % 60) minutes</MudText>
                            </MudText>

                            <MudDivider />
                            <MudStack Row="true" Class="justify-center">
                                <MovieRatingExtended MovieId="movie.Id" Size="Size.Medium" />
                            </MudStack>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    }

</MudGrid>


@code {
    List<MovieWithRating> trendingMovies = null!;
    int currentPage = 1;
    int pageSize = 10;
    int totalMovies = 0;

    protected override async Task OnInitializedAsync()
    {
        trendingMovies = await RatingSvc.GetTopMoviesByRatingAsync(100);
    }
}